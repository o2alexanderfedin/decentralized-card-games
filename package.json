{
  "name": "@decentralized-games/card-components",
  "version": "1.0.0",
  "description": "React component library for visualizing and interacting with playing cards",
  "type": "module",
  "main": "./dist/card-components.umd.cjs",
  "module": "./dist/card-components.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/card-components.js",
      "require": "./dist/card-components.umd.cjs"
    },
    "./redux": {
      "types": "./dist/redux/index.d.ts",
      "import": "./dist/card-components-redux.js"
    },
    "./styles": "./dist/card-components.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && vite build --config vite.config.umd.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-redux": "^9.0.0"
  },
  "peerDependenciesMeta": {
    "@reduxjs/toolkit": {
      "optional": true
    },
    "react-redux": {
      "optional": true
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "motion": "^12.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@reduxjs/toolkit": "^2.11.2",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react-vite": "^8.6.15",
    "@storybook/test": "^8.6.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "size-limit": "^12.0.0",
    "storybook": "^8.6.15",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.0",
    "vitest-axe": "^0.1.0"
  },
  "license": "MIT",
  "author": "Alexander Fedin",
  "repository": {
    "type": "git",
    "url": "https://github.com/o2alexanderfedin/decentralized-card-games.git"
  },
  "homepage": "https://github.com/o2alexanderfedin/decentralized-card-games#readme",
  "bugs": {
    "url": "https://github.com/o2alexanderfedin/decentralized-card-games/issues"
  },
  "keywords": [
    "react",
    "card",
    "playing-cards",
    "components",
    "animation",
    "card-game",
    "drag-and-drop",
    "accessibility",
    "typescript",
    "redux"
  ],
  "size-limit": [
    {
      "path": "dist/card-components.js",
      "limit": "60 kB"
    },
    {
      "path": "dist/card-components-redux.js",
      "limit": "10 kB"
    }
  ]
}
