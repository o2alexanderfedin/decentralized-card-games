{
  "name": "@decentralized-games/card-components",
  "version": "0.1.0",
  "description": "React component library for visualizing and interacting with playing cards",
  "type": "module",
  "main": "./dist/card-components.cjs",
  "module": "./dist/card-components.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/card-components.js",
      "require": "./dist/card-components.cjs"
    },
    "./redux": {
      "types": "./dist/redux/index.d.ts",
      "import": "./dist/card-components-redux.js",
      "require": "./dist/card-components-redux.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-redux": "^9.0.0"
  },
  "peerDependenciesMeta": {
    "@reduxjs/toolkit": {
      "optional": true
    },
    "react-redux": {
      "optional": true
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "motion": "^12.27.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "typescript": "^5.8.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.0",
    "vitest-axe": "^0.1.0"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "card",
    "playing-cards",
    "components",
    "animation",
    "card-game"
  ]
}
